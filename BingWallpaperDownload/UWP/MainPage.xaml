<Page
    x:Class="UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel Margin="10,10,10,10">
        <Grid x:Name="HomeButtonGrid" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Uid="Download" Content="Download" Click="DownloadButton_Click" Margin="5,0,5,0"/>
            <Button Grid.Column="1" x:Uid="OpenBing" Content="Open Bing" Click="OpenBingButton_Click" Margin="5,0,5,0"/>
        </Grid>
        <Grid x:Name="HomeHintGrid" Margin="5,5,0,5"
              RelativePanel.Below="HomeButtonGrid">
            <TextBlock x:Name="MainHint" HorizontalAlignment="Left" Text="Waiting" TextWrapping="Wrap"  Visibility="Visible"/>
        </Grid>
        <Grid RelativePanel.Below="HomeHintGrid">
            <HyperlinkButton x:Name="ImageTodayHrefButton" 
                             x:Uid="ImageTodayHyperLinkButton"
                             Height="Auto"
                             AutomationProperties.Name="test">
                <Image x:Name="ImageToday" Width="auto" Height="auto"/>
            </HyperlinkButton>
            <Grid VerticalAlignment="Bottom"
                Background="Gray" Opacity="0.7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="ImageTodayTitle" Grid.Row="0"
                           FontSize="24" FontWeight="Bold" FontStyle="Italic" Text="Title" TextWrapping="Wrap"/>
                <TextBlock x:Name="ImageTodayDescription" Grid.Row="1"
                           FontSize="16" Text="Description" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </RelativePanel>
</Page>
